{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CharacterProfile",
  "type": "object",
  "properties": {
    "basicInfo": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "faction": { "type": "string" },
        "avatar": { "type": "string", "format": "uri" },
        "reputation": { "type": "string", "description": "Summary of public rumors or known reputation." },
        "background": { "type": "string", "description": "Brief context about where the character is from or where they've been seen." },
        "firstImpression": { "type": "string", "description": "What players perceive immediately about the character." },
        "appearance": { "type": "string", "description": "Detailed physical description of the character." }
      },
      "required": ["name"]
    },
    "personality": {
      "type": "object",
      "title": "OCEAN Traits",
      "properties": {
        "openness":   { "type": "integer", "minimum": -100, "maximum": 100 },
        "conscientiousness": { "type": "integer", "minimum": -100, "maximum": 100 },
        "extraversion":      { "type": "integer", "minimum": -100, "maximum": 100 },
        "agreeableness":     { "type": "integer", "minimum": -100, "maximum": 100 },
        "neuroticism":       { "type": "integer", "minimum": -100, "maximum": 100 }
      },
      "required": ["openness", "conscientiousness", "extraversion", "agreeableness", "neuroticism"]
    },
    "relationshipToPlayer": {
      "type": "object",
      "properties": {
        "affinity": {
          "type": "integer",
          "minimum": -100,
          "maximum": 100,
          "description": "Character's current affinity toward the player"
        },
        "notes": { "type": "string" }
      },
      "required": ["affinity"]
    },
    "preferences": {
      "type": "object",
      "properties": {
        "attractedToTraits": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dislikesTraits": {
          "type": "array",
          "items": { "type": "string" }
        },
        "gossipTendency": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        }
      }
    }
  },
  "required": ["basicInfo", "personality", "relationshipToPlayer"]
}